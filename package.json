{
  "name": "mempooler-desktop",
  "version": "0.0.4",
  "main": "./dist/electron/main.electron.js",
  "scripts": {
    "ng": "ng",
    "start": "npm run build && electron-forge start",
    "build": " npm run build:angular && npm run build:electron",
    "build:angular": "ng build",
    "build:electron": "tsc --p electron",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "dev": "run-p dev:*",
    "start:dev": "electron-forge start",
    "dev:angular": "npm run build:angular -- --watch",
    "dev:electron": "npm run build:electron -- --watch",
    "build-installer": "electron-builder"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.0",
    "@angular/common": "~11.2.0",
    "@angular/compiler": "~11.2.0",
    "@angular/core": "~11.2.0",
    "@angular/forms": "~11.2.0",
    "@angular/platform-browser": "~11.2.0",
    "@angular/platform-browser-dynamic": "~11.2.0",
    "@angular/router": "~11.2.0",
    "@types/electron-store": "^3.2.0",
    "@types/node-fetch": "^2.5.8",
    "electron-fetch": "^1.7.3",
    "electron-squirrel-startup": "^1.0.0",
    "electron-store": "^7.0.2",
    "node-fetch": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.0",
    "@angular/cli": "~11.2.0",
    "@angular/compiler-cli": "~11.2.0",
    "@electron-forge/cli": "^6.0.0-beta.54",
    "@electron-forge/maker-deb": "^6.0.0-beta.54",
    "@electron-forge/maker-rpm": "^6.0.0-beta.54",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
    "@electron-forge/maker-zip": "^6.0.0-beta.54",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "electron": "^11.3.0",
    "electron-builder": "^22.10.5",
    "electron-zip-packager": "^4.0.2",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.2"
  },
  "browser": {
    "crypto": false,
    "fs": false,
    "path": false,
    "os": false
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mempooler_desktop"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
